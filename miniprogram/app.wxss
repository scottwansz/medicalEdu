.hidden {
  display: none;
}

/** Flex */

.flex {
  display: flex;
}

.flex-right {
  display: flex;
  justify-content: right;
}

.flex-center {
  display: flex;
  justify-content: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
}

.items-center {
  align-items: center;
}

/** Size */

.width-32 {
  width: 32px;
}

.height-32 {
  height: 32px;
}

/** Spacing */

.margin-x-16 {
  margin: 0 16px;
}

.margin-y-16 {
  margin: 16px 0;
}

.margin-t-16 {
  margin-top: 16px;
}

.margin-t-24 {
  margin-top: 24px;
}

.margin-r-16 {
  margin-right: 16px;
}

.padding-8 {
  padding: 8px;
}

.padding-x-4 {
  padding: 0 4px;
}

.padding-y-8 {
  padding: 8px 0;
}

/** Border */

.border-box {
  box-sizing: border-box;
}

.border {
  border: 1px solid #38b2ac;
}

.border-white {
  border: 2px solid white;
}

.border-primary {
  border-color: #38b2ac;
}

.border-bottom {
  border-bottom: 1px solid gainsboro;
}

.round {
  border-radius: 5px;
}

.round-full {
  border-radius: 50%;
}

/**  Text Style */

.text-right {
  text-align: right;
}

.text-center {
  text-align: center;
}

.bold {
  font-weight: 700;
}

.color-primary {
  color: #a0aec0;
}

.color-secondary {
  color: #38b2ac;
}

.color-white {
  color: white;
}

.bg-color-primary {
  background-color: #38b2ac;
}

.bg-color-secondary {
  background-color: #ebf8ff;
}

.bg-color-white {
  background-color: white;
}

